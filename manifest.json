{
  "manifest_version": 2,

  "name": "Top Visited Websites",
  "description": "This extension shows your top 10 most visited websites for the past week, month, or year.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": { "16":  "img/icon16.png",
             "48":  "img/icon48.png",
             "128": "img/icon128.png" 
  },
  "permissions": [
    "activeTab",
    "history"
  ]
}
